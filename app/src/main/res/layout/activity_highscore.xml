<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/highscore_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:textColor="@color/colorWhite"
            android:text="@string/top_ten"
            android:textSize="56sp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/highscoretable1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="56sp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/highscoretable2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreyLight"
            android:textSize="42sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/highscoretable3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreyLight"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/highscoretable4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreyLight"
            android:textSize="38sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/highscoretable5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:textSize="36sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/highscoretable6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:textSize="34sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/highscoretable7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:textSize="32sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/highscoretable8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreyDark"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/highscoretable9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreyDark"
            android:textSize="28sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/highscoretable10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreyDark"
            android:textSize="26sp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>